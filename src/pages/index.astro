---
import Layout from "~/layouts/layout.astro";
import {Home} from '~/components/home';

const colors: string[] = ["ff6002", "32adfe", "b693fd", "00c562", "f04e42", "7dbdbc", "ff4455", "fc7694", "ffd705", "c11d22"];
const randomColor = (): string[] => colors.sort(() => Math.random() - 0.5).slice(0, 8)

const weatherIcons: string[] = ['weather_1.png','weather_12.png','weather_19.png','weather_34.png','weather_37.png','weather_44.png']
---

<Layout title="首页">
  <Home colors={randomColor()} weatherIcons={weatherIcons} client:idle/>
</Layout>
