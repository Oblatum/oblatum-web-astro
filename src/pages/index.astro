---
import Layout from "~/layouts/layout.astro";
import { MdRipple } from "@material/web/ripple/ripple";
import { Image } from "astro:assets";
import { MdTextButton } from "@material/web/button/text-button"

const colors = [
  "ff6002",
  "32adfe",
  "b693fd",
  "00c562",
  "f04e42",
  "7dbdbc",
  "ff4455",
  "fc7694",
  "ffd705",
  "c11d22",
];

// 在 colors 中随机不连续的取出 8 个颜色，每次取到的都不同
const randomColors = colors.sort(() => Math.random() - 0.5).slice(0, 8);
---

<Layout title="首页">
    <div class="grid grid-flow-row-dense grid-cols-3 mx-2 mb-4 mt-36 gap-8">
      <div class="contents">
        <div class="col-span-full">
          <h1
            class="text-3xl text-[rgba(var(--oblatum-color-primary))] font-600 line-height-loose"
          >
            经典的
          </h1>
          <h1 class="text-3xl font-600 line-height-loose">不规则质感设计</h1>
          <p class="opacity-65">
            基于Material Design，淡化了原有的质感，视感更加的和谐。
          </p>
        </div>
        
        <div
          class="relative grid col-span-full grid-cols-3 cursor-pointer gap-6 rounded-4 from-[rgba(41,170,224,0.1)] to-[rgba(108,128,208,0.2)] bg-gradient-to-rb p-4 shadow-sm md:(grid-cols-6)"
        >
          <MdRipple client:only="lit"/>
          {
            ['weather_1.png','weather_12.png','weather_19.png','weather_34.png','weather_37.png','weather_44.png'].map((i)=>(
              <div class="mx-auto size-16 md:(size-24)">
                <Image src=`/icons/${i}` alt={i} width={200} height={200} loading={"lazy"} decoding={"async"}/>
              </div>
            ))
          }
        </div>
      </div>

      <div class="contents">
        <div class="col-span-full flex flex-col items-start justify-end md:(col-span-1 col-start-3 items-end)">
          <h1 class="text-3xl font-600 line-height-loose">颜色优调</h1>
          <p class="opacity-65">如糖果般甜</p>
        </div>

        <div
          class="grid col-span-full grid-cols-4 my-4 grow justify-items-center gap-8 md:(col-span-2 mt-24)"
        >
          {
            randomColors.map((color) => (
              <div
                class={`size-14 md:(size-18) rounded-50 shadow-md relative`}
                style={{ "background-color": `#${color}` }}
              >
                <MdRipple />
              </div>
            ))
          }
        </div>
      </div>

      <div class="contents">
        <div class="col-span-1 col-span-full flex flex-col md:(col-span-1 justify-end)">
          <h1
            class="text-3xl text-[rgba(var(--oblatum-color-primary))] font-600 line-height-loose"
          >
            天气
          </h1>
          <h1 class="text-3xl font-600 line-height-loose">图标扩展</h1>
          <p class="line-height-relaxed opacity-65">
            支持几何天气图标扩展和Chronus图标包。
          </p>
        </div>
        <div class="grid col-span-full grid-cols-3 my-4 justify-items-center gap-6 md:(col-span-2 mt-24)">
          {
            ['weather_1.png','weather_12.png','weather_19.png','weather_34.png','weather_37.png','weather_44.png'].map((i)=>(
              <div class="mx-auto size-16 md:(size-24)">
                <Image src=`/icons/${i}` alt={i} width={200} height={200} loading={"lazy"} decoding={"async"}/>
              </div>
            ))
          }
        </div>
    </div>
</Layout>
